<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_summary_customer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/offers_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Offerte:" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sent_offers_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="24dp"/>

            <TextView
                    android:id="@+id/reservations_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Prenotazioni visite:" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/visited_reservations_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>