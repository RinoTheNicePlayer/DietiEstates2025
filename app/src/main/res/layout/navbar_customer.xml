<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3EDF7"
        android:paddingVertical="12dp"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/navbar_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/navbar_item_home_state"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="?attr/homeNavbarState"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/navbar_item_home_icon"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:src="@drawable/home_navbar"
                    android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/left_navbar_item_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />

        <LinearLayout
                android:id="@+id/navbar_item_summary_state"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="?attr/summaryNavbarState"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/navbar_item_summmary_icon"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:src="@drawable/summary_navbar"
                    android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/right_navbar_item_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />

        <LinearLayout
                android:id="@+id/navbar_item_profile_state"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="?attr/profileNavbarState"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/navbar_item_profile_icon"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:src="@drawable/profile_navbar"
                    android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/navbar_labels_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="54dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/navbar_label_home"
                android:textColor="#1D1B20"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Home" />

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/navbar_label_summary"
                android:textColor="#49454F"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Riepilogo" />

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/navbar_label_profile"
                android:textColor="#49454F"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Profilo" />
    </LinearLayout>
</LinearLayout>