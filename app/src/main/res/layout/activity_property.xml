<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/scroll_view_property"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="52dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/property_map"
                    android:layout_width="match_parent"
                    android:layout_height="243dp"
                    android:layout_marginBottom="18dp"
                    android:src="@drawable/google_maps"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="212dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/location"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/location_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Vicino a una scuola" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginBottom="27dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"></LinearLayout>

            <ImageView
                    android:id="@+id/property_image"
                    android:layout_width="match_parent"
                    android:layout_height="243dp"
                    android:layout_marginBottom="18dp"
                    android:src="@drawable/image1"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/sale_rent_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="22dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="231dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/sale_rent_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="19dp"
                        android:src="@drawable/sale"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/sale_rent_value"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="In vendita" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="21dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="38dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/map"
                        android:scaleType="fitXY" />

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/address_value"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="284dp"
                        android:text="Appartamento - Via Napoli 12, Calvizzano, Napoli" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="34dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="227dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/price_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/price"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/price_value"
                        android:textColor="#009951"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="€ 120.000" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/details_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/rooms_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/number_of_rooms"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/rooms_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="5" />

                <ImageView
                        android:id="@+id/size_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/size"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/size_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginEnd="13dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="60 m²" />

                <ImageView
                        android:id="@+id/bathrooms_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/number_of_bathrooms"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/bathrooms_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="1" />

                <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                <ImageView
                        android:id="@+id/floor_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/floor"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/floor_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginEnd="19dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2" />

                <ImageView
                        android:id="@+id/elevator_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/elevator"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/elevator_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Si" />

                <ImageView
                        android:id="@+id/balcony_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/balcony"
                        android:scaleType="fitXY" />

                <TextView
                        android:id="@+id/balcony_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Si" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"></LinearLayout>

            <LinearLayout
                    android:id="@+id/actions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/offer_button"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/button_style1"
                        android:paddingVertical="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/offer_button_text"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Fai un’offerta" />
                </LinearLayout>

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <LinearLayout
                        android:id="@+id/reservation_button"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/button_style1"
                        android:paddingVertical="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/reservation_button_text"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Prenota una visita" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginBottom="32dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical"></LinearLayout>

            <TextView
                    android:id="@+id/description_title_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="26dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Descrizione" />

            <TextView
                    android:id="@+id/description_value"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="281dp"
                    android:text="APPARTAMENTO IN VIA NAPOLI Proponiamo in vendita una pregevole unità immobiliare situata..." />
        </LinearLayout>
    </ScrollView>
</LinearLayout>