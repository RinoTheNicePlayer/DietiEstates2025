<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_create_property"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="52dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/property_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/image1"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/sale_rent_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="22dp"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/sale_rent_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/sale"
                        android:scaleType="fitXY" />

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <LinearLayout
                        android:id="@+id/sale_rent_input_container"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/text_field_style"
                        android:paddingHorizontal="18dp"
                        android:orientation="horizontal">

                    <EditText
                            android:inputType="text"
                            android:hint="In vendita/In affitto"
                            android:background="@null"
                            android:id="@+id/sale_rent_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="14dp" />

                    <ImageView
                            android:id="@+id/sale_rent_dropdown_icon"
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:src="@drawable/select_arrow"
                            android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="22dp"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/map"
                        android:scaleType="fitXY" />

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <EditText
                        android:inputType="text"
                        android:hint="Indirizzo"
                        android:id="@+id/address_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/price_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="26dp"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/price_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/price"
                        android:scaleType="fitXY" />

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <EditText
                        android:inputType="text"
                        android:hint="Prezzo"
                        android:id="@+id/price_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rooms_balcony_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/rooms_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/number_of_rooms"
                        android:scaleType="fitXY" />

                <EditText
                        android:inputType="text"
                        android:hint="N. stanze"
                        android:id="@+id/rooms_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />

                <LinearLayout
                        android:id="@+id/container1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                <ImageView
                        android:id="@+id/balcony_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/balcony"
                        android:scaleType="fitXY" />

                <LinearLayout
                        android:id="@+id/balcony_input_container"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/text_field_style"
                        android:paddingHorizontal="18dp"
                        android:orientation="horizontal">

                    <EditText
                            android:inputType="text"
                            android:hint="Si/No"
                            android:background="@null"
                            android:id="@+id/balcony_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="14dp" />

                    <ImageView
                            android:id="@+id/balcony_dropdown_icon"
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:src="@drawable/select_arrow"
                            android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/size_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginEnd="74dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/size_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/size"
                        android:scaleType="fitXY" />

                <EditText
                        android:inputType="text"
                        android:hint="Misura"
                        android:id="@+id/size_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_marginEnd="42dp"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />

                <TextView
                        android:id="@+id/description_label"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Descrizione" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/bathrooms_floors_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/bathrooms_floors_container1"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/bathrooms_icon"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginBottom="46dp"
                            android:src="@drawable/number_of_bathrooms"
                            android:scaleType="fitXY" />

                    <ImageView
                            android:id="@+id/floors_icon"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:src="@drawable/floor"
                            android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/bathrooms_floors_container2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">

                    <EditText
                            android:inputType="text"
                            android:hint="N. bagni"
                            android:id="@+id/bathrooms_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginEnd="36dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field_style"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="18dp" />

                    <EditText
                            android:inputType="text"
                            android:hint="Piano"
                            android:id="@+id/floors_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_marginEnd="36dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field_style"
                            android:paddingVertical="14dp"
                            android:paddingHorizontal="18dp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/description_input_container"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingTop="17dp"
                        android:paddingBottom="6dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/description_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_marginBottom="95dp"
                            android:layout_marginStart="18dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Descrizione" />

                    <ImageView
                            android:id="@+id/description_view_icon"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginStart="150dp"
                            android:src="@drawable/view_text"
                            android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/elevator_submit_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="23dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/elevator_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/elevator"
                        android:scaleType="fitXY" />

                <LinearLayout
                        android:id="@+id/elevator_input_container"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/text_field_style"
                        android:paddingHorizontal="18dp"
                        android:orientation="horizontal">

                    <EditText
                            android:inputType="text"
                            android:hint="Si/No"
                            android:background="@null"
                            android:id="@+id/elevator_input_field"
                            android:textColor="#B3B3B3"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="14dp" />

                    <ImageView
                            android:id="@+id/elevator_dropdown_icon"
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:src="@drawable/select_arrow"
                            android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/container2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                <LinearLayout
                        android:id="@+id/create_property_button"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/button_style1"
                        android:paddingVertical="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/create_property_button_text"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Crea" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>