<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/rxkdb9db7zl"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="39dp"
            android:layout_marginHorizontal="134dp"
            android:src="@drawable/home"
            android:scaleType="fitXY" />

    <TextView
            android:id="@+id/rypnsumv1vc"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="92dp"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Dove lo cerchi?" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110dp"
            >

        <LinearLayout
                android:id="@+id/rmugv8ooplei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="42dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/rkv6xqyut1ve"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/search_by_name"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/rbyyhr8pfi8m"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/rqrq6uhhfqqs"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Ricerca per nome" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/rcoz1fwu18xs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="42dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/r4dcnvv0yuln"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/draw_area_on_map"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/rhbnaijsfuv5"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/rwo6fw0r019"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Disegna area su mappa" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/rvh6wbxk6u8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/rcqui2nxss3l"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/distance_from_a_point"
                    android:scaleType="fitXY" />

            <LinearLayout
                    android:id="@+id/rpgy4c63bsy8"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/rrq8xdmwse38"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Distanza da un punto" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>