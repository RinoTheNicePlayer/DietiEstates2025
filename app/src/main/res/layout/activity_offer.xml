<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_offer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="87dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/offer_title"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:layout_marginBottom="11dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fai un’offerta" />

            <LinearLayout
                    android:id="@+id/property_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="47dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/property_divider"
                        android:layout_width="1dp"
                        android:layout_height="77dp"
                        android:background="#D9D9D9"
                        android:layout_marginEnd="23dp"
                        android:orientation="vertical"></LinearLayout>

                <ImageView
                        android:id="@+id/property_image"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/image2"
                        android:scaleType="fitXY" />

                <LinearLayout
                        android:id="@+id/property_info_section"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="41dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/property_address"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginBottom="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="186dp"
                            android:text="Appartamento - Via Napoli 12, Calvizzano, Napoli" />

                    <TextView
                            android:id="@+id/property_price"
                            android:textColor="#757575"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Prezzo immobile: € 120.000" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                    android:inputType="text"
                    android:hint="Offerta"
                    android:id="@+id/offer_input_field"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="18dp" />

            <LinearLayout
                    android:id="@+id/offer_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/offer_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Invia" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>