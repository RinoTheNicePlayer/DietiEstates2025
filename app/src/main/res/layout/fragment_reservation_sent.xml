<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.ReservationSentFragment">

    <TextView
            android:id="@+id/reservation_sent_title"
            android:textColor="#32ADE6"
            android:textSize="32sp"
            android:layout_marginBottom="18dp"
            android:layout_marginHorizontal="85dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prenotazione_effettuata" />

    <ImageView
            android:id="@+id/verified_icon"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginBottom="47dp"
            android:layout_marginHorizontal="134dp"
            android:contentDescription="@string/logo_offer_sent"
            android:src="@drawable/verified"
            android:scaleType="fitXY" />

    <TextView
            android:id="@+id/summary_label"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/riepilogo" />

    <LinearLayout
            android:id="@+id/reservation_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card1"
            android:paddingVertical="45dp"
            android:layout_marginBottom="64dp"
            android:layout_marginHorizontal="24dp"
            android:elevation="3dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/address_value"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

        <TextView
                android:id="@+id/date_value"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="33dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

        <TextView
                android:id="@+id/time_value"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/return_to_home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/button_style1"
            android:paddingVertical="14dp"
            android:layout_marginBottom="42dp"
            android:layout_marginHorizontal="24dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/return_to_home_button_text"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/torna_alla_home" />
</LinearLayout>