<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_profile_admin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/profile_title"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:layout_marginBottom="52dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Profilo" />

            <TextView
                    android:id="@+id/login_status_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Hai effettuato lâ€™accesso come:" />

            <TextView
                    android:id="@+id/user_role_value"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Amministratore" />

            <TextView
                    android:id="@+id/email_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="E-mail:" />

            <TextView
                    android:id="@+id/email_value"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="59dp"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="esempio@esempio.com" />

            <LinearLayout
                    android:id="@+id/change_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="29dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/change_password_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Modifica Password" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/register_manager_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="29dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/register_manager_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Registra Gestore" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/register_agent_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="29dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/register_agent_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Registra A. immobiliare" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style4"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="149dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/logout_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Esci" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/navbar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3EDF7"
                    android:paddingVertical="12dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/navbar_item_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp"
                        android:layout_marginHorizontal="22dp"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:id="@+id/navbar_item_home_state"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:background=""
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/navbar_item_home_icon"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/home_navbar"
                                android:scaleType="fitXY" />
                    </LinearLayout>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    <LinearLayout
                            android:id="@+id/navbar_item_offers_state"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:background=""
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/navbar_item_offers_icon"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/offer_navbar"
                                android:scaleType="fitXY" />
                    </LinearLayout>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    <LinearLayout
                            android:id="@+id/navbar_item_reservations_state"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:background=""
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/navbar_item_reservations_icon"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/reservation_navbar"
                                android:scaleType="fitXY" />
                    </LinearLayout>

                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                    <LinearLayout
                            android:id="@+id/navbar_item_profile_state"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:background=""
                            android:paddingHorizontal="20dp"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/navbar_item_profile_icon"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/profile_navbar"
                                android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/navbar_label_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="36dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/navbar_label_home"
                            android:textColor="#1D1B20"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Home" />

                    <TextView
                            android:id="@+id/navbar_label_offers"
                            android:textColor="#1D1B20"
                            android:textSize="12sp"
                            android:layout_marginEnd="55dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Offerte" />

                    <TextView
                            android:id="@+id/navbar_label_reservations"
                            android:textColor="#1D1B20"
                            android:textSize="12sp"
                            android:layout_marginEnd="50dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Prenotazioni" />

                    <TextView
                            android:id="@+id/navbar_label_profile"
                            android:textColor="#1D1B20"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Profilo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>