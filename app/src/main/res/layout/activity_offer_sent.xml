                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/rnt3e8ecbli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginHorizontal="97dp"
                    android:layout_weight="1"
                    android:text="Hai offerto “€ 100.000” per:"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            <LinearLayout
                    android:id="@+id/rmwxvnfvs7z"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_style4"
                    android:paddingVertical="26dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="76dp"
                    android:layout_marginHorizontal="41dp"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/r4vsj2e2nq3k"
                        android:layout_width="99dp"
                        android:layout_height="80dp"
