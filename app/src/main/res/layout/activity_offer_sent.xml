<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_offer_sent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/offer_sent_title"
                    android:textColor="#32ADE6"
                    android:textSize="32sp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="OFFERTA INVIATA!" />

            <ImageView
                    android:id="@+id/verified_icon"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="61dp"
                    android:layout_marginHorizontal="134dp"
                    android:src="@drawable/verified"
                    android:scaleType="fitXY" />

            <TextView
                    android:id="@+id/summary_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="38dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Riepilogo:" />

            <TextView
                    android:id="@+id/offer_details_value"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginHorizontal="97dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hai offerto “€ 100.000” per:" />

            <LinearLayout
                    android:id="@+id/property_card_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/card"
                    android:paddingVertical="26dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="73dp"
                    android:layout_marginHorizontal="41dp"
                    android:elevation="3dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/property_card_image"
                        android:layout_width="99dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/image3"
                        android:scaleType="fitXY" />

                <LinearLayout
                        android:id="@+id/property_card_info_section"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/property_address_value"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginBottom="17dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Appartamento - Via Napoli 12, Calvizzano, Napoli" />

                    <TextView
                            android:id="@+id/property_previous_price_value"
                            android:textColor="#757575"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Prezzo precedente: € 120.000" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/feedback_message"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="95dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Riceverai un riscontro a breve" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>