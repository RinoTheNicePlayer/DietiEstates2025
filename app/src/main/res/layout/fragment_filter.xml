<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragment.FilterFragment">

    <TextView
            android:id="@+id/filter_title"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_marginBottom="51dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/filtro" />

    <Spinner
            android:id="@+id/sale_rent_spinner"
            android:textColor="#B3B3B3"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_field_style"
            android:paddingHorizontal="18dp"
            android:layout_marginBottom="34dp"
            android:layout_marginHorizontal="23dp"
            android:paddingVertical="14dp" />

    <LinearLayout
            android:id="@+id/price_range_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/price_min_container"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="#E6E0E9"
                android:paddingTop="10dp"
                android:paddingBottom="40dp"
                android:paddingHorizontal="18dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/price_min_label"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/prezzo_min"
                    android:inputType="numberDecimal"/>
        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <LinearLayout
                android:id="@+id/price_max_container"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="#E6E0E9"
                android:paddingTop="10dp"
                android:paddingBottom="40dp"
                android:paddingHorizontal="18dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/price_max_label"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/prezzo_max"
                    android:inputType="numberDecimal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/separator_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="33dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/separator_left1"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#49454F"
                android:orientation="vertical">
        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <LinearLayout
                android:id="@+id/separator_right"
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="#49454F"
                android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/size_bathroom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="23dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/size_container"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="#E6E0E9"
                android:paddingTop="10dp"
                android:paddingBottom="40dp"
                android:paddingHorizontal="18dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/size_label"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/dimensione"
                    android:inputType="number"/>
        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <EditText
                android:inputType="number"
                android:hint="@string/n_bagni"
                android:id="@+id/bathrooms_input_field"
                android:textColor="#B3B3B3"
                android:textSize="16sp"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_field_style"
                android:paddingVertical="22dp"
                android:paddingHorizontal="22dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/separator_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="33dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/separator_left2"
                android:layout_width="159dp"
                android:layout_height="1dp"
                android:background="#49454F"
                android:orientation="vertical">
        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/button_style1"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="24dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/search_button_text"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/cerca" />
    </LinearLayout>

</LinearLayout>