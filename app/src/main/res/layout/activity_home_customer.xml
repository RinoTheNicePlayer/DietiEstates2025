<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_home_customer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="52dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/home_banner_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curtain"
                    android:paddingTop="13dp"
                    android:paddingBottom="36dp"
                    android:layout_marginBottom="75dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/home_banner_image"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="134dp"
                        android:src="@drawable/home"
                        android:scaleType="fitXY" />

                <LinearLayout
                        android:id="@+id/search_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/button_style3"
                        android:paddingVertical="25dp"
                        android:layout_marginHorizontal="26dp"
                        android:elevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/search_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/magnifying_glass"
                            android:scaleType="fitXY" />

                    <TextView
                            android:id="@+id/search_text"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Cerca il tuo immobile" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:id="@+id/slogan_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="75dp"
                    android:layout_marginHorizontal="56dp"
                    android:src="@drawable/slogan"
                    android:scaleType="fitXY" />

            <include layout="@layout/navbar_customer" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>