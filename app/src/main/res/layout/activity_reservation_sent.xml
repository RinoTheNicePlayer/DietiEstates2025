<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_reservation_sent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="88dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/reservation_sent_title"
                    android:textColor="#32ADE6"
                    android:textSize="32sp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginHorizontal="85dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="PRENOTAZIONE EFFETTUATA!" />

            <ImageView
                    android:id="@+id/verified_icon"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginBottom="47dp"
                    android:layout_marginHorizontal="134dp"
                    android:src="@drawable/verified"
                    android:scaleType="fitXY" />

            <TextView
                    android:id="@+id/summary_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginBottom="36dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Riepilogo:" />

            <LinearLayout
                    android:id="@+id/reservation_card_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card"
                    android:paddingVertical="45dp"
                    android:layout_marginBottom="64dp"
                    android:layout_marginHorizontal="24dp"
                    android:elevation="3dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/address_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="32dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Indirizzo" />

                <TextView
                        android:id="@+id/date_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="33dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="gg/mm/aaaa" />

                <TextView
                        android:id="@+id/time_value"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00:00" />
            </LinearLayout>

            <TextView
                    android:id="@+id/feedback_message"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="95dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Riceverai un riscontro a breve" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>