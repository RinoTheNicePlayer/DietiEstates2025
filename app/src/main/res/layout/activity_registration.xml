<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scroll_view_registration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:paddingTop="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/logo_image_registration"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginHorizontal="158dp"
                    android:src="@drawable/account"
                    android:scaleType="fitXY" />

            <TextView
                    android:id="@+id/registration_title"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:layout_marginBottom="26dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Registrati" />

            <LinearLayout
                    android:id="@+id/email_section_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E0E9"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/email_label_registration"
                        android:textColor="#49454F"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Email" />

                <TextView
                        android:id="@+id/email_hint_registration"
                        android:textColor="#1D1B20"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Inserisci la tua email" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider_email_registration"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="33dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical"></LinearLayout>

            <LinearLayout
                    android:id="@+id/password_section_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E6E0E9"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/password_label_registration"
                        android:textColor="#49454F"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Password" />

                <TextView
                        android:id="@+id/password_hint_registration"
                        android:textColor="#1D1B20"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Inserisci la tua password" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider_password_registration"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="34dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical"></LinearLayout>

            <LinearLayout
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:layout_marginHorizontal="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/register_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Registrati" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>