<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:id="@+id/scroll_view_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

        <ImageView
                android:id="@+id/logoImageView"
                android:contentDescription="@string/image_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/account"
                android:layout_gravity="center" />

        <TextView
                android:id="@+id/registration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/registrati"
                android:contentDescription="@string/pagina_di_registrazione"
                android:textColor="#000000"
                android:textSize="32sp"
                android:layout_gravity="center" />

        <LinearLayout
                android:id="@+id/email_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E0E9"
                android:paddingVertical="11dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/email_label"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/email" />

            <EditText
                    android:id="@+id/email_hint"
                    android:textColor="#1D1B20"
                    android:textSize="16sp"
                    android:layout_height="48dp"
                    android:layout_width="wrap_content"
                    android:hint="@string/inserisci_la_tua_email"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"/>
        </LinearLayout>

            <LinearLayout
                    android:id="@+id/divider_email_registration"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="33dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
            </LinearLayout>

        <LinearLayout
                android:id="@+id/password_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E0E9"
                android:paddingVertical="11dp"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/password_label"
                    android:textColor="#49454F"
                    android:textSize="12sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/password" />

            <EditText
                    android:id="@+id/passwordHintTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="@string/inserisci_la_tua_password"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:textColor="#000000"
                    android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
                    android:id="@+id/divider_password_registration"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#49454F"
                    android:layout_marginBottom="34dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:background="@drawable/button_style1"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/register_button_text"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/registrati" />
        </LinearLayout>

        <TextView
                android:id="@+id/errore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="20dp"
                android:text="@string/email_o_password_non_corretti"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:visibility="invisible" />
    </LinearLayout>
</ScrollView>