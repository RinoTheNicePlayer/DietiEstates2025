<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.CreatePropertyFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/property_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="15dp"
                android:contentDescription="@string/image_property"
                android:src="@drawable/image4"
                android:scaleType="fitXY"
                android:clickable="true"
                android:focusable="true"/>

        <LinearLayout
                android:id="@+id/sale_rent_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/sale_rent_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/sale_image"
                    android:src="@drawable/sale"
                    android:scaleType="fitXY" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <Spinner
                    android:id="@+id/sale_rent_spinner"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/address_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/address_image"
                    android:src="@drawable/map"
                    android:scaleType="fitXY" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <EditText
                    android:id="@+id/address_input_field"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="18dp"
                    android:hint="@string/indirizzo"
                    android:inputType="textPostalAddress"
                    android:autofillHints="postalAddress" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="26dp"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/price_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/price_image"
                    android:src="@drawable/price"
                    android:scaleType="fitXY" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            <EditText
                    android:id="@+id/price_input_field"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="18dp"
                    android:hint="@string/prezzo"
                    android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/rooms_balcony_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/rooms_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/rooms_image"
                    android:src="@drawable/number_of_rooms"
                    android:scaleType="fitXY" />

            <EditText
                    android:id="@+id/rooms_input_field"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="18dp"
                    android:inputType="numberDecimal"
                    android:hint="@string/n_stanze"/>

            <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
            </LinearLayout>

            <ImageView
                    android:id="@+id/balcony_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/balcony_image"
                    android:src="@drawable/balcony"
                    android:scaleType="fitXY" />

            <Spinner
                    android:id="@+id/balcony_spinner"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/size_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="74dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/size_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/size_room_image"
                    android:src="@drawable/size"
                    android:scaleType="fitXY" />

            <EditText
                    android:id="@+id/size_input_field"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_marginEnd="42dp"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="18dp"
                    android:inputType="number"
                    android:hint="@string/misura"/>

            <TextView
                    android:id="@+id/description_label"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/descrizione"
                    android:contentDescription="@string/box_title"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/bathrooms_floors_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="23dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/bathrooms_floors_container1"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/bathrooms_icon"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginBottom="46dp"
                        android:contentDescription="@string/bathroom_image"
                        android:src="@drawable/number_of_bathrooms"
                        android:scaleType="fitXY" />

                <ImageView
                        android:id="@+id/floors_icon"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:contentDescription="@string/floor_image"
                        android:src="@drawable/floor"
                        android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/bathrooms_floors_container2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                <EditText
                        android:inputType="number"
                        android:hint="@string/n_bagni"
                        android:id="@+id/bathrooms_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginEnd="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />

                <EditText
                        android:inputType="number"
                        android:hint="@string/piano"
                        android:id="@+id/floors_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_marginEnd="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_style"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="18dp" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/description_input_container"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingTop="17dp"
                    android:paddingBottom="6dp"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/description_input_field"
                        android:textColor="#B3B3B3"
                        android:textSize="16sp"
                        android:layout_marginBottom="95dp"
                        android:layout_marginHorizontal="11dp"
                        android:layout_height="48dp"
                        android:layout_width="match_parent"
                        android:hint="@string/descrizione"
                        android:inputType="textMultiLine" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/elevator_submit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="23dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/elevator_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@string/elevator_image"
                    android:src="@drawable/elevator"
                    android:scaleType="fitXY" />

            <Spinner
                    android:id="@+id/elevator_spinner"
                    android:textColor="#B3B3B3"
                    android:textSize="16sp"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_style"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="14dp" />

            <LinearLayout
                    android:id="@+id/container2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/create_property_button"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_style1"
                    android:paddingVertical="14dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/create_property_button_text"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/crea" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/error_label_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/email_o_password_non_corretti"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:visibility="invisible" />
    </LinearLayout>
</ScrollView>